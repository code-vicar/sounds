{% extends 'AppBundle::base.html.twig' %}

{% block body %}
	<div id="index">
		<div class="pure-g">
			<div class="pure-u-1">
				<form class="pure-form">
				    <fieldset>
				        <input name="query" type="text" placeholder="query" value="{{query}}">

				        <button type="submit" class="pure-button pure-button-primary">Query</button>
				    </fieldset>
				</form>
			</div>
		</div>
	    <div class="pure-g">
	    	{% for sound in results %}
	    	<div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
	        	<section class="soundbox">
	        		<header>
		            	{{sound.title}}
		            </header>
		            <p>{{sound.description}}<p>
		            <audio controls>
		            	<source src="{{sound.stream_url}}?client_id={{soundcloud_client_id}}">
		            </audio>
		            <footer class="soundbox-caption">
		                Duration {{sound.duration|ms2s}}s
		            </footer>
	        	</section>
	        </div>
			{% endfor %}
	    </div>
    </div>
{% endblock %}

{% block javascripts %}
	{% javascripts
		'js/default/*.js' %}
		<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}